@{
    ViewData["Title"] = "Home Page";
}
<!--Проверка на авторизацию пользователя, если авторизирован то приветствуем и выводим его имя
    Вероятно стоит автоматизировать, но пока сойдет -->
<div class="text-center">

    @if (User.Identity.IsAuthenticated){
        foreach (var i in Model)
            {if (i.Email == User.Identity.Name){
                <h1 class="display-4">Здравствуйте,@i.Name</h1>}}
    }
    else{
        <h1 class="display-4">Вы не авторизированы</h1>
    }

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
